<?xml version="1.0"?>
<ServiceDefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" name="SolarTournament" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition">
  <WebRole name="SolarTournament" vmsize="ExtraSmall">
    <Imports />
    <Startup>
      <Task commandLine="setup_web.cmd" executionContext="elevated">
        <Environment>
          <Variable name="EMULATED">
            <RoleInstanceValue xpath="/RoleEnvironment/Deployment/@emulated" />
          </Variable>
        </Environment>
      </Task>
      <Task commandLine="setupAzureMongoEndpointsAgent.cmd" executionContext="elevated" />
    </Startup>
    <ConfigurationSettings>
      <Setting name="AzureMongoEndpointsAgent.RoleName" />
      <Setting name="AzureMongoEndpointsAgent.EndpointName" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
  </WebRole>
  <WorkerRole name="ReplicaSetRole" vmsize="Medium">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <LocalResources>
      <LocalStorage name="MongoDBLocalDataDir" sizeInMB="1024" cleanOnRoleRecycle="false" />
      <LocalStorage name="MongodLogDir" sizeInMB="512" cleanOnRoleRecycle="false" />
    </LocalResources>
    <ConfigurationSettings>
      <Setting name="MongoDBDataDir" />
      <Setting name="ReplicaSetName" />
      <Setting name="MongoDBDataDirSize" />
      <Setting name="MongoDBLogVerbosity" />
    </ConfigurationSettings>
    <Endpoints>
      <InternalEndpoint name="MongodPort" port="27017" protocol="tcp" />
    </Endpoints>
    <Runtime>
      <EntryPoint>
        <NetFxEntryPoint assemblyName="ReplicaSetRole.dll" targetFrameworkVersion="v4.0.30319" />
      </EntryPoint>
    </Runtime>
  </WorkerRole>
</ServiceDefinition>